<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ustudy.exam.dao.StudentSubscoreDao">

	<delete id="deleteStudentSubscores" parameterType="Long">
		DELETE from stusubscore where exam_grade_sub_id=#{egsId}
	</delete>

	<insert id="insertStudentSubscores" useGeneratedKeys="true" keyProperty="id" parameterType="java.util.List">
		insert into stusubscore (stuid,exam_grade_sub_id,score,rank) values  
	    <foreach collection="list" item="item" index="index" separator="," >  
	        (#{item.stuid},#{item.egsId},#{item.score},#{item.rank})  
	    </foreach>  
	</insert>

</mapper>